<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dhx.dao.TestDao">

    <resultMap type="cn.dhx.entity.Test" id="TestMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="info" column="info" jdbcType="INTEGER"/>
        <result property="xx" column="xx" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TestMap">
        select
          id, info, xx
        from test
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TestMap">
        select
          id, info, xx
        from test
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="info != null">
                and info = #{info}
            </if>
            <if test="xx != null">
                and xx = #{xx}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from test
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="info != null">
                and info = #{info}
            </if>
            <if test="xx != null">
                and xx = #{xx}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test(info, xx)
        values (#{info}, #{xx})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into test(info, xx)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.info}, #{entity.xx})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into test(info, xx)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.info}, #{entity.xx})
        </foreach>
        on duplicate key update
        info = values(info),
        xx = values(xx)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test
        <set>
            <if test="info != null">
                info = #{info},
            </if>
            <if test="xx != null">
                xx = #{xx},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test where id = #{id}
    </delete>

</mapper>

